{
    "name": "sunnywalker/slimphp-skeleton",
    "description": "A skeleton for SlimPHP 3 with Twig, Phinx, Eloquent, and PSR-4 App",
    "keywords": ["framework", "slim"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=7.0.0",
        "slim/slim": "^3.8",
        "slim/twig-view": "^2.2",
        "slim/flash": "^0.2.0",
        "illuminate/database": "^5.5",
        "robmorgan/phinx": "^0.9.1",
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/App"
        }
    },
    "config": {
        "vendor-dir": "app/vendor"
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('env.php') || copy('env.example.php', 'env.php');\""
        ]
    }
}
